<!DOCTYPE html>
<html lang="en">  
  <head>
    <%- include('./partials/head')  %> 
    <link rel="stylesheet" href="/css/registro.css" /> 
  </head>
  <body>
    <%-  include('./partials/header')  %> 

    <main>
      <section class="posicion">
        <hr />
        <ul>
          <li><a href="/">Inicio</a></li>
          <li><i class="fas fa-chevron-right"></i></li>
          <li><a href="#">Editar cuenta</a></li>
        </ul>
      </section>
      <section class="registro">
        <form action="" method="POST" class="formulario-registro" enctype="multipart/form-data">
            <div class="caja-registro">
                <p>Editar cuenta</p>           
                <label for="nombre">Nombre</label> 
                    <div>
                        <input type="text" name="nombre" id="nombre" value="<%= user.firstName%>" />
                    </div>             
                <label for="nombre">Apellido</label> 
                    <div>
                        <input type="text" name="apellido" id="apellido"  value="<%= user.lastName%>"/>
                    </div> 
                <label for="email">Email</label>
                    <div>
                        <input type="email" name="email" id="email"  value="<%= user.email%>"/>
                    </div>
                <div class="cajaFlexUsuario">
              <div class="inputIMG">
                <label for="fotoPerfil">Foto de Perfil</label>         
                <div class="imagenPerfil">
                  <input class="inputImagen" type="file" name="fotoPerfil" id="fotoPerfil"  value="<%= user.profileImage%>"/>
                </div>
              </div>
                </div> 
            </div>
            <div class="boton-iniciar">
                <button class="boton-crear" type="submit">Editar cuenta</button>
            </div>
            <div class="boton-cancelar">
                <a href="">Cancelar</a>
            </div>
        </form>
      </section>
    </main>     
    <%-  include('./partials/footer')  %> 
  </body>
</html>
