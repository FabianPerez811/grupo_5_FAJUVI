<header>
    <div class="cabecera-promo">
      <p>10% off transferencia bancaria - 3 cuotas sin interés</p>
    </div>
    <div class="cabecera-usuario">
      <% if (locals.isLogged) { %>
        <div>
          <img src="/img/img_users/<%= locals.userLogged.image %> " alt="foto_usuario">
        </div>
        <div class="nombreUsuario">
          Hola <%= locals.userLogged.firstName %> 
        </div>
        <% }%>
    </div>
     
    <div class="cabecera-principal">
      <div class="caja-menu-busqueda">
        <i class="fas fa-bars"></i>
        <form class="caja-busqueda" action="#"  method="GET">
          <input type="text" placeholder="Buscar..." />
          <button type="submit"><i class="fas fa-search"></i></button>
        </form>
      </div>     
      <div class="caja-iconos">
        <a href="/user/sign-in" class="iconoRegistro"><i class="fas fa-user-alt"></i></a>        
        <a href="/admin/products"><i class="fas fa-users-cog"></i></a> 
      </div>
      
      <div class="usuarios-escritorio">   
        <% if (!locals.isLogged) { %>     
        <a href="/user/sign-in">Iniciar Sesión</a>
        <a href="/user/sign-up" >Crear Cuenta</a>
        <a href="/admin/products"><i class="fas fa-users-cog"></i></a> 
        <% }%>
      </div>
    </div>
    <div class="cabecera-logo">
      <a href="/">
        <img src="/img/Logo-Fajuvi.png" alt="Logo Fajuvi" />
      </a>
    </div>  
    <nav class="barra-nav"> 
      <a href="/"><i class="fas fa-home"></i>Inicio</a>             
      <a href="/products/list"><i class="fas fa-list"></i>Productos</a>
      <a href="/products/carritoProductos"><i class="fas fa-shopping-cart"></i>Carrito</a>         
    </nav>
 
</header>