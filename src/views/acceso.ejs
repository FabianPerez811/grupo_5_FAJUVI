<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('./partials/head')  %> 
    <link rel="stylesheet" href="/css/acceso.css" />
  </head>

  <body>
    <%-  include('./partials/header')  %> 
    <main>
      <section class="posicion">
        <hr />
        <ul>
          <li><a href="/">Inicio</a></li>
          <li><i class="fas fa-chevron-right"></i></li>
          <li><a href="/user/profile">Iniciar Sesión</a></li>
        </ul>
      </section>
      <section class="acceso">     
        <form action="/user/sign-in" method="POST" class="formulario-sesion">
          <div class="caja-sesion">
            <div class="errores">
              <ul >
              </ul>
            </div>
            <p>Iniciar Sesión</p>
            <label for="email">Email</label>
            <input type="email" name="email" id="email" />

            <% if (locals.errors && errors.email) { %>
              <div id="msj_error"> <%= errors.email.msg %> </div>
            <% } %>

            <label for="password">Contraseña</label>
            <input
              type="password"
              name="password"
              id="password"
              minlength="8"
            />
            <% if (locals.errors && errors.password) { %>
              <div id="msj_error"> <%= errors.password.msg %> </div>
            <% } %>
          </div>
          <div class="mantenerSesion">
            <input class="iniciada"
            type="radio"
            value="sesionIniciada"
            name="sesionIniciada"
            id="sesionIniciada"
            />
            <label for="sesionIniciada"> Mantener sesión iniciada</label>               
          </div>
          <div class="boton-iniciar">
            <button type="submit">Iniciar Sesión</button>
          </div>         
        </form>       
      </section>
      <div class="crear-cuenta">
        <a href="/user/sign-up">¿No tenés una cuenta?</a>
        <button class="boton-crear" type="submit">Crear Cuenta</button>
      </div>
    </main>
    <%-  include('./partials/footer')  %> 
    <script src="/js/validacionAccesoUsuario.js"></script>
  </body>
</html>

