<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('./partials/head')  %> 
    <link rel="stylesheet" href="/css/acceso.css" />
  </head>

  <body>
    <%-  include('./partials/header')  %> 
    <main>
      <section class="posicion">
        <hr />
        <ul>
          <li><a href="/">Inicio</a></li>
          <li><i class="fas fa-chevron-right"></i></li>
          <li><a href="/acceso">Iniciar Sesión</a></li>
        </ul>
      </section>
      <section class="acceso">
        <div class="caja-sesion">
          <form class="formulario-sesion">
            <p>Iniciar Sesión</p>
            <label for="email">Email</label>
            <input type="email" name="email" id="email" required />
            <label for="password">Contraseña</label>
            <input
              type="password"
              name="password"
              id="password"
              minlength="8"
            />
          </form>
        </div>
        <div class="mantenerSesion">
          <input
            type="radio"
            value="sesionIniciada"
            name="sesionIniciada"
            id="sesionIniciada"
          />
          Mantener sesión iniciada
        </div>
      </section>
      <div class="boton-iniciar">
        <button type="submit">Iniciar Sesión</button>
      </div>
      <div class="crear-cuenta">
        <a href="">¿No tenés una cuenta?</a>
        <button class="boton-crear" type="submit">Crear Cuenta</button>
      </div>
    </main>
    <%-  include('./partials/footer')  %> 
  </body>
</html>

