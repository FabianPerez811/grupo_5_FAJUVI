<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('./partials/head')  %> 
    <link rel="stylesheet" href="/css/indice.css" />
  </head>

  <body>
     <%-  include('./partials/header')  %> 

    <main>
      <section class="posicion">
        <hr />
        <ul>
          <li><a href="/">Inicio</a></li>
          <li><i class="fas fa-chevron-right"></i></li>
          <li><a href="/productos">Nuestros Productos</a></li>
        </ul>
      </section>
      <h3 class="titulo-destacado"> Nuestros Productos</h3>
      <section class="productos-destacados">

        <% for(i = 0; i < productos.length; i++) { %>

        <article>
          <div class="caja-imagen">
            <a href="/productos/<%= productos[i].id %>">
              <img src="<%= productos[i].image %>" alt="imagen de collar" />
            </a>
          </div>
          <h4 class="producto"><%= productos[i].name %></h4>
          <p class="precio">$<%= productos[i].price %></p>
          <p class="cuotas">6 Cuotas sin interés de $<%= productos[i].price / 6 %></p>
        </article>

        <% } %>
      </section>
      <div class="boton-mas-productos">
        <button class="boton-ver-mas">Más productos</button>
      </div>
    </main>

    <%-  include('./partials/footer')  %> 
  </body>
</html>
